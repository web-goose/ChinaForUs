{% extends "blog.html.twig" %}

{% set home = page.parent %}

{% block content %}
<section class="post">
    <div class="post-head">
        <h1>- {{ page.title }} -</h1>
        <div class="route">
            <a href="{{ home.url }}">{{ home.title }}</a>
            <span>&#47;</span>
            <a>{{ page.title }}</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            {% include "partials/blog/post.html.twig" %}
            {% include "partials/blog/sidebar.html.twig" %}
        </div>
    </div>
</section>
{% endblock %}